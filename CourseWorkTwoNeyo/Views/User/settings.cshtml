@model Users
@{
    ViewData["Title"] = "User Settings";
}

      <!--Main Body content -->
      <section class="pt-5 pb-5" id="page-user-head">
        <div class="container">
          <h1 id="cause-head">
            <!--Grid column-->
        <div class="mb-4">    
          <img class="rounded-circle z-depth-2" alt="100x100" width="100" height="100" src="@Model.UserPhoto"
        data-holder-rendered="true">
        </div>
    <!--Grid column-->
        @Model.Name
           <br>
          <i class="fa fa-flag redu" id="user-locale"> User since @Model.RegDate.ToString("dddd, dd MMMM yyyy hh:mm tt")</i><br>
          <p class="redu">Thanks for being an active member of our community. 
           <br> Together, we can bring santity back in our world again.</p>
        </h1>
        </div>
      </section>

      <section class="pt-5 pb-5">
        <div class="container">
          <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
            <h3><i class="fa fa-user"></i> Profile & Settings</h3>
            <div class="list-group">
              <a asp-controller="User" asp-action="profileEdit" asp-route-id="@Model.Id"  class="list-group-item list-group-item-action">General Information<i class="fa fa-arrow-right arrow-right"></i></a>
              <a asp-controller="User" asp-action="changePassword" asp-route-id="@Model.Id"  class="list-group-item list-group-item-action">Change Password<i class="fa fa-arrow-right arrow-right"></i></a>
              <a asp-controller="User" asp-action="disableAccount" asp-route-id="@Model.Id"  class="list-group-item list-group-item-action">Disable My Account<i class="fa fa-arrow-right arrow-right"></i></a>
            </div>
          </div>
        </div>
      </section>
      <!--End of Main Body content -->
     