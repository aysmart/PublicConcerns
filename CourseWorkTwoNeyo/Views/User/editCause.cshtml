@model Causes
@{
    ViewData["Title"] = "Edit Cause";
}


      <!--Main Body content -->
      <section class="pt-5 pb-5" id="page-heard">
        <div class="container">
          <ul class="nav nav-tabs">
            <li class="nav-item">
              <a class="nav-link" aria-current="page" asp-controller="User" asp-action="causeDashboard" asp-route-id="@ViewBag.causeId"><i class="fa fa-arrow-left"></i> Go to my cause dashboard</a>
            </li>
          </ul>
        </div>
      </section>
      <!--End of Main Body content -->
      
      
       <section class="pt-5 pb-5">
        <div class="container">
          <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
          <form class="row g-3" method="post">
            <div class="col-md-12 position-relative">
              <label asp-for="Title" class="form-label"><b>Cause Title</b></label>
              <input asp-for="Title" required type="text" class="form-control" value="@Model.Title"  placeholder="eg. Soro Soke: We Say No To Police Brutality">
              <div class="valid-tooltip">
                Looks good!
              </div>
            </div>
            <div class="col-md-12 position-relative">
              <label asp-for="Targeted" class="form-label"><b>Your Objection Target</b><p>Organizations, governments, policies, etc.</p></label>
              <input type="text" class="form-control" id="testy" value="@Model.Targeted" asp-for="Targeted" placeholder="eg. Nigerian Police Force">
              <div class="valid-tooltip">
                Looks good!
              </div>
            </div>
            <div class="col-md-12 position-relative">
              <label asp-for="Focus" for="validationTooltip04" class="form-label">Cause Focus</label>
              <select asp-for="Focus" class="form-select" id="validationTooltip04" required>
                        @if(Model.Focus == "Creative Tax Avoidance")
                        {
                            <option selected value="Creative Tax Avoidance">Creative Tax Avoidance</option>
                <option value="Unfair Employment Practices">Unfair Employment Practices</option>
                <option value="Racism">Racism</option>
                <option  value="Disregard of Environmental Impacts">Disregard of Environmental Impacts</option>
                            <option  value="Others">Others</option>
                        }
                        else if(Model.Focus == "Unfair Employment Practices")
                        {
                            <option value="Creative Tax Avoidance">Creative Tax Avoidance</option>
                <option selected value="Unfair Employment Practices">Unfair Employment Practices</option>
                <option value="Racism">Racism</option>
                <option  value="Disregard of Environmental Impacts">Disregard of Environmental Impacts</option>
                            <option  value="Others">Others</option>
                        }
                        else if(Model.Focus=="Racism")
                        {
                            <option  value="Creative Tax Avoidance">Creative Tax Avoidance</option>
                <option value="Unfair Employment Practices">Unfair Employment Practices</option>
                <option selected value="Racism">Racism</option>
                <option  value="Disregard of Environmental Impacts">Disregard of Environmental Impacts</option>
                            <option  value="Others">Others</option>
                        }
                        else if(Model.Focus=="Disregard of Environmental Impacts")
                        {
                            <option  value="Creative Tax Avoidance">Creative Tax Avoidance</option>
                <option value="Unfair Employment Practices">Unfair Employment Practices</option>
                <option value="Racism">Racism</option>
                <option selected value="Disregard of Environmental Impacts">Disregard of Environmental Impacts</option>
                            <option  value="Others">Others</option>
                        }
                        else if(Model.Focus=="Others")
                        {
                            <option  value="Creative Tax Avoidance">Creative Tax Avoidance</option>
                <option value="Unfair Employment Practices">Unfair Employment Practices</option>
                <option value="Racism">Racism</option>
                <option  value="Disregard of Environmental Impacts">Disregard of Environmental Impacts</option>
                <option selected value="Others">Others</option>
                        }
              </select>
            </div>
            <div class="" id="other-fill"></div>
            <div class="col-md-12 position-relative">
              <label asp-for="Content" class="form-label"><b>Tell your story</b><p>explain the cause in details and why you care about it.</p></label>
              <textarea  id="editor" asp-for="Content" class="form-control">@Model.Content</textarea>
            </div>

            <div class="col-xs-12">
              <label class="cabinet center-block">
                <b>Add a photo (Optional)</b>
                <p>Petitions with a photo get six times more signatures than petitions without a photo.</p>
                <figure>
                  <img src="@Model.CauseBanner" class="gambar img-responsive img-thumbnail" id="item-img-output" />
                  <figcaption><i class="fa fa-camera"></i></figcaption>
                </figure>
                <input type="file" class="item-img file center-block" id="item-img" name="file_photo"/>
              </label>
            </div>
            <div class="image-center">
              <button type="submit" class="btn btn-danger">Update Cause</button>
            </div>
            <textarea asp-for="Content" id="displayContent" required hidden>@Model.Content</textarea>
            <textarea asp-for="CauseBanner" id="CauseBannerBox" hidden required>@Model.CauseBanner</textarea>
            <textarea asp-for="PlainContent" id="displayContent2" hidden required>@Model.PlainContent</textarea>
            <input type="text" asp-for="Category" hidden value="@Model.Category" />
            <input type="text" asp-for="Id" hidden value="@Model.Id" />
          </form>
          </div>
        </div>
     </section>

      